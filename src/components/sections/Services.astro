<style>
    .group:hover h3 {
        color: #0D3B66;
    }

    .organizer-card {
        width: 250px;
        transform: translateY(0);
        transition: transform 0.3s ease;
    }

    @media (max-width: 768px) {
        .organizer-card {
            width: 220px;
        }
    }

    @keyframes float {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-5px);
        }
        100% {
            transform: translateY(0px);
        }
    }

	.truncate-title {
        position: relative;
        overflow: visible;
        height: auto;
        min-height: 1.75rem;
    }

	.title-short {
        display: block;
        transition: opacity 0.3s ease;
    }

	.title-full {
        max-width: 100%;
        text-align: center;
        padding: 0.5rem;
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        z-index: 20;
        top: calc(100% + 5px);
        font-size: 0.9rem;
    }

	.group:hover .title-short {
        opacity: 0;
    }

    .organizer-card:hover {
        animation: float 3s ease-in-out infinite;
    }

    /* New styles for the enhanced logo */
	.conference-logo-container {
        width: 224px;
        height: 224px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        padding: 10px;
        position: relative;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        margin: 0 auto;
        overflow: hidden;
    }

	.conference-logo-container:hover {
        transform: scale(1.12);
        box-shadow: 0 20px 60px rgba(26, 122, 100, 0.3);
        z-index: 10;
    }

	.conference-logo-container::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, rgba(78, 205, 196, 0), rgba(78, 205, 196, 0.2));
        opacity: 0;
        transition: opacity 0.5s ease;
        pointer-events: none;
    }

	.conference-logo-container:hover::after {
        opacity: 1;
    }

    /* Make the image itself slightly larger on hover */
    .conference-logo-container img,
    .conference-logo-container .astro-img {
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .conference-logo-container:hover img,
    .conference-logo-container:hover .astro-img {
        transform: scale(1.08);
    }

    /* Enhance the decorative ring on hover */
    .conference-logo-container .decorative-ring {
        transition: all 0.5s ease;
    }

	.conference-logo-container:hover .decorative-ring {
        border-width: 6px;
        border-color: rgba(26, 122, 100, 0.3);
    }

    /* Make the glow effect more prominent on hover */
    .conference-logo-container .glow-effect {
        transition: all 0.5s ease;
    }

    .conference-logo-container:hover .glow-effect {
        filter: blur(25px);
        opacity: 0.8;
        transform: scale(1.15);
    }

	.indexed-journal-badge {
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.3);
        animation: gentle-float 3s ease-in-out infinite;
    }

    .conference-logo-container:hover .indexed-journal-badge {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(26, 122, 100, 0.4);
    }

	@keyframes gentle-float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-3px);
        }
    }

    @keyframes ping-slow {
        0%, 100% {
            transform: scale(1);
            opacity: 0.85;
        }
        50% {
            transform: scale(1.5);
            opacity: 0.5;
        }
    }

	.animate-ping-slow {
        animation: ping-slow 2s cubic-bezier(0, 0, 0.2, 1) infinite;
    }

    @keyframes pulse-slow {
        0% {
            transform: scale(0.95);
            opacity: 0.6;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
        100% {
            transform: scale(0.95);
            opacity: 0.6;
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 4s infinite;
    }
</style>
